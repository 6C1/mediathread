{{#>>assets}}
<div id="asset_table">
    <div class="filter-widget">
        <div class="switcher collection-chooser" tabindex="1">
            <span class="switcher-prefix">Owner: </span>
                <a class="switcher-top closed">
                    <span class="down-arrow" tabindex="3"></span>
                    <span class="title" id="switcher-title">
                        {{ selected_owner.public_name }}
                    </span>
                </a>
            </span>
            
            <ul class="switcher-options">
                {{#show_my_items?}}
                <li>
                    <ul class="switcher-sub" id="switcher-extras">
                        <li class="choice_my_items" id="choice_my_items">
                            <a href="" onclick="javascript:AssetList.selectOwner({{user.username}})">&mdash; My Items &mdash;</a>
                        </li>
                    </ul>
                </li>
                {{/show_my_items?}}
                <li>
                    <ul class="switcher-sub" id="switcher-extras">
                        <li class="choice_all_items" id="choice_all_items">
                            <a href="" onclick="javascript:AssetList.selectOwner(null)">&mdash; All Items &mdash;</a>
                        </li>
                        {{#owners}}                            
                            <li><a href="" onclick="javascript:AssetList.selectOwner({{username}})">{{public_name}}</a></li>
                        {{/owners}}
                    </ul>
                </li>
            </ul>
        </div> <!-- end switcher -->
    </div> <!-- end filter widget -->
</div> <!-- end asset_table -->
{{/>>assets}}